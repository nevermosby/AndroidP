<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liwenq.loveubymoment" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MemorialDayListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MemorialDayDetailActivity"
            android:label="@string/title_memorialday_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MemorialDayListActivity" />
        </activity>
        <activity
            android:name=".MemorialDayMainActivtity"
            android:label="@string/title_activity_memorial_day_main_activtity" >
        </activity>
        <activity
            android:name=".listview"
            android:label="@string/title_activity_listview" >
        </activity>
        <activity
            android:name=".ViewPagerActivity"
            android:label="@string/title_activity_view_pager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
